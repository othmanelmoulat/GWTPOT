<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>
	<ui:style src='../../defines.css'>
		.panel {
		background-color: lightPanelColor;
		padding: 5px;
		}
	</ui:style>
	<ui:with type="com.fountainhead.client.NameTokens" field="nameTokens" />

	<g:HTMLPanel addStyleNames="{style.panel}">

		<p><gwt:Label text="Login" />
		<gwt:TextBox ui:field="loginBox" />
		<gwt:Label ui:field="username" />
</p>
		<p><gwt:Label text="Password" />
		<gwt:TextBox ui:field="passwordBox" />
		<gwt:Label ui:field="password" />

		</p>		
		<p><gwt:Button ui:field="buttonSubmit" text="Login" /></p>
		
		<p><gwt:Label ui:field="errorLabel" /></p>

		
	</g:HTMLPanel>
</ui:UiBinder>
